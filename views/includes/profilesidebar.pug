.card.mb-4
  .card-header
    != user.firstName + ' ' + user.lastName
    if !user.isVerify
        span.badge.badge-secondary.float-right(style='position:absolute;font-size:8px;opacity:.3;vertical-align: inherit;margin-left:10px;margin-top:5px;' data-toggle="tooltip" data-placement="right" title="დაუდასტურებელი")
                i.fas.fa-minus
    else
        span.badge.badge-info.float-right(style='position:absolute;font-size:8px;vertical-align: inherit;margin-left:10px;margin-top:5px;' data-toggle="tooltip" data-placement="right" title="დადასტურებული")
                i.fas.fa-check
  .card-body.no-padder
    img(src=user.avatar, alt=user.firstName + ' ' + user.lastName)
    .list-group
      a.list-group-item.list-group-item-action.fb-color(href=user.facebookURL, target="_blank")
        i.fab.fa-facebook-f
        |  ფეისბუქის პროფილი
      a.list-group-item.list-group-item-action(href='#')
        i.fa.fa-cog
        |  Navigation Item 2
    if user.isAdmin
      .list-group
        .list-group-item.bg-primary.text-white
          i.fas.fa-tachometer-alt
          strong  ადმინის ხელსაწყოები
        a.list-group-item.list-group-item-action(href="/users")
          i.fas.fa-users
          |   მომხმარებლები
        a.list-group-item.list-group-item-action(href='/pages')
          i.fas.fa-file-alt
          |   გვერდები
        a.list-group-item.list-group-item-action(href='/navs')
          i.fas.fa-bars
          |   ნავიგაცია
